<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<!-- Splash style -->
	<style name="AppTheme.Launcher">
		<item name="android:windowBackground">@drawable/poprey_splash</item>
		<item name="android:colorPrimaryDark">@color/app_background</item>
	</style>
	<!-- Application theme -->
	<style name="AppTheme" parent="AppTheme.Base"/>
  <style name="ThankYouTheme" parent="AppTheme.Base">
    <item name="colorPrimaryDark">@color/thank_you_status_bar_color</item>
    <item name="android:windowBackground">@color/thank_you_background_color</item>
  </style>
	<style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	  <item name="android:textColorHint">@color/colorPrimaryDark</item>
		<item name="android:windowBackground">@android:color/white</item>
    <item name="android:listViewStyle">@style/Widget.AppTheme.Base.ListView</item>
    <item name="android:scrollViewStyle">@style/Widget.AppTheme.Base.ScrollView</item>
  </style>
	<style name="Toolbar">
		<item name="android:layout_height">?attr/actionBarSize</item>
		<item name="android:background">?attr/colorPrimary</item>
	</style>
	<style name="ThemeToolbarNavigationView">
		<item name="android:listDivider">@color/colorPrimaryDark</item>
	</style>
  <style name="Widget.AppTheme.Base.ListView" parent="android:Widget.ListView">
    <item name="android:overScrollMode">never</item>
  </style>
  <style name="Widget.AppTheme.Base.ScrollView" parent="android:Widget.ScrollView">
    <item name="android:overScrollMode">never</item>
  </style>
  <style name="AuthenticationDialogTheme"  parent="Theme.AppCompat.Light.Dialog">
    <item name="android:windowBackground">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:padding">0dp</item>
    <item name="android:layout_gravity">bottom</item>
    <item name="android:textColorHint">@color/authentication_add_color</item>
  </style>
  <style name="EmailDialogTheme"  parent="Theme.AppCompat.Light.Dialog">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@null</item>
    <item name="android:textColorHint">@color/authentication_add_color</item>
  </style>
  <style name="LoadingDialogTheme"  parent="Theme.AppCompat.Light.Dialog">
    <item name="android:windowBackground">@color/app_background</item>
    <item name="android:statusBarColor">@color/app_background</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:padding">0dp</item>
    <item name="android:layout_gravity">center</item>
  </style>
</resources>